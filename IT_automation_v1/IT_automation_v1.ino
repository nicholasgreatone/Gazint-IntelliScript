void setup() {

  pinMode(pinA, INPUT_PULLUP);                //setting up internal pullup resitor
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);  // here the 0x3c is the I2C address, check your i2c address if u have multiple devices.
  display.clearDisplay();
  Keyboard.begin();  // Initialize the keyboard
  Mouse.begin();     // Initialize Mouse library
}

void loop() {

  display.drawBitmap(0, 0, myBitmap2, 128, 32, WHITE);
  display.display();
  if (digitalRead(pinA) == LOW) {
    display.clearDisplay();
    display.drawBitmap(0, 0, myBitmap, 128, 32, WHITE);
    display.display();
    delay(100);
    Mouse.click(MOUSE_LEFT);  // Perform a right-click
    display.display();
    delay(100);
    Keyboard.print(" Write what you want here! ");  // Corrected with a semicolon
    delay(100);
    Keyboard.write(KEY_RETURN);
    delay(100);
    while (digitalRead(pinA) == LOW)
      ;  // Wait for button release to avoid repeated messages
    display.clearDisplay();
  }
}
